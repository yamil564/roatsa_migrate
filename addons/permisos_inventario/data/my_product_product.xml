<odoo>
    <data>
        <record id="product_template_form6" model="ir.ui.view">
            <field name="name">product_template_form6</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_stock_inventory']" position='after'>
                    <field name="costo_promedio" />
                    <field name="cantidadprueba" invisible="1"/>
                    <field name="promedioprueba" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>